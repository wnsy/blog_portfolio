<%= form_with(model: @portfolio_item, local: true) do |form| %>

<div class="row">
  <div class="col-md-6">
    <div class="form_group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control form-bottom-space' %>
    </div>

    <div class="form_group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: 'form-control form-bottom-space' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form_group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control form-bottom-space', rows: 15 %>
    </div>
  </div>
  <div class="col-md-12">

    <hr>
    <h3>Technologies</h3>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
      <div class="form_group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: 'form-control form-bottom-space' %>
      </div>
      <% end %>
    </div>

  </div>
</div>



<div class="form_group">
  <%= form.submit class: 'btn btn-outline-primary btn-block' %>
</div>
<% end %>
