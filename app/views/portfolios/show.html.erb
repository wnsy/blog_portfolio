<div class="container portfolio-padding portfolio-container">
  <div class="row">

    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image.url, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <p>
        <em><%= @portfolio_item.subtitle %></em>
      </p>

      <p>
        <%= @portfolio_item.body %>
      </p>


      <h3>Technologies Used:</h3>
      <p>
        <% @portfolio_item.technologies.each do |tech| %>
        <p><%= tech.name %></p>
        <% end %>
      </p>

    </div>

  </div>
</div>
